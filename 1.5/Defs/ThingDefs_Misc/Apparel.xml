    layers, unfinished graphic, skill required, equipped stat offsets-->

    <!--bases-->
    <ThingDef Name="Khajiit_LeatherBase" ParentName="ApparelMakeableBase" Abstract="true">
        <techLevel>Neolithic</techLevel>
        <stuffCategories>
            <li>Leathery</li>
        </stuffCategories>
        <tradeability>Sellable</tradeability>
        <possessionCount>1</possessionCount>
        <thingCategories>
            <li>Apparel</li>
        </thingCategories>
        <apparel>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Legs</li>
            </bodyPartGroups>
            <layers>
                <li>OnSkin</li>
            </layers>
            <tags>
                <li>Neolithic</li>
            </tags>
            <canBeDesiredForIdeo>false</canBeDesiredForIdeo>
            <defaultOutfitTags>
                <li>Worker</li>
                <li>Soldier</li>
            </defaultOutfitTags>
        </apparel>
        <recipeMaker>
            <skillRequirements>
                <Crafting>3</Crafting>
            </skillRequirements>
            <researchPrerequisite MayRequire="dankpyon.medieval.overhaul">DankPyon_Tailoring</researchPrerequisite>
            <recipeUsers>
                <li>ElectricTailoringBench</li>
                <li>HandTailoringBench</li>
                <li>CraftingSpot</li>
                <li MayRequire="dankpyon.medieval.overhaul">DankPyon_TailorsBench</li>
            </recipeUsers>
        </recipeMaker>
        <tradeTags>
            <li>BasicClothing</li>
        </tradeTags>
        <colorGenerator Class="ColorGenerator_StandardApparel" />
    </ThingDef>

    <ThingDef Name="Khajiit_MetalBase" ParentName="ArmorSmithableBase" Abstract="true">
        <stuffCategories>
            <li>Metallic</li>
        </stuffCategories>
        <possessionCount>1</possessionCount>
        <tradeability>Sellable</tradeability>
        <thingCategories>
            <li>ApparelArmor</li>
        </thingCategories>
        <apparel>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Legs</li>
            </bodyPartGroups>
            <layers>
                <li>Shell</li>
            </layers>
            <tags>
                <li>MedievalMilitary</li>
            </tags>
            <canBeDesiredForIdeo>false</canBeDesiredForIdeo>
            <defaultOutfitTags>
                <li>Soldier</li>
            </defaultOutfitTags>
        </apparel>
        <equippedStatOffsets>
            <MoveSpeed>-0.8</MoveSpeed>
            <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.1</SlaveSuppressionOffset>
        </equippedStatOffsets>
        <recipeMaker>
            <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
            <researchPrerequisite>PlateArmor</researchPrerequisite>
            <skillRequirements>
                <Crafting>7</Crafting>
            </skillRequirements>
            <recipeUsers>
                <li MayRequire="dankpyon.medieval.overhaul">DankPyon_Anvil</li>
            </recipeUsers>
        </recipeMaker>
        <tradeTags>
            <li>Clothing</li>
            <li>Armor</li>
        </tradeTags>
        <colorGenerator Class="ColorGenerator_Options">
            <options>
                <li>
                    <weight>10</weight>
                    <only>(0.33,0.33,0.33)</only>
                </li>
                <li>
                    <weight>10</weight>
                    <only>(0.65,0.65,0.65)</only>
                </li>
                <li>
                    <weight>6</weight>
                    <min>(0.3,0.3,0.3)</min>
                    <max>(0.5,0.5,0.5)</max>
                </li>
            </options>
        </colorGenerator>
    </ThingDef>

