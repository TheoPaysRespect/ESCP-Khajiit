<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <!--__________claws___________-->

    <BodyPartGroupDef>
        <defName>RightHandClawsGroup</defName>
        <label>right hand claws</label>
        <listOrder>80</listOrder>
    </BodyPartGroupDef>


    <BodyPartGroupDef>
        <defName>LeftHandClawsGroup</defName>
        <label>left hand claws</label>
        <listOrder>80</listOrder>
    </BodyPartGroupDef>
    
    <BodyPartDef>
        <defName>RightHandClaws</defName>
        <label>right claws</label>
        <description>Sharp claws hidden underneatch soft paws.</description>
        <hitPoints>10</hitPoints>
        <skinCovered>false</skinCovered>
        <canSuggestAmputation>true</canSuggestAmputation>
    </BodyPartDef>

    <BodyPartDef>
        <defName>LeftHandClaws</defName>
        <label>left claws</label>
        <description>Sharp claws hidden underneatch soft paws.</description>
        <hitPoints>10</hitPoints>
        <skinCovered>false</skinCovered>
        <canSuggestAmputation>true</canSuggestAmputation>
    </BodyPartDef>

    <!--_______stomach_________-->
    <BodyPartDef>
        <defName>KhajiitStomach</defName>
        <label>stomach</label>
        <description>Khajiit stomach, resistant to food poisoning.</description>
        <permanentInjuryChanceFactor>0.08</permanentInjuryChanceFactor>
        <hitPoints>21</hitPoints>
        <canSuggestAmputation>true</canSuggestAmputation>
        <skinCovered>false</skinCovered>
        <tags>
            <li>MetabolismSource</li>
        </tags>
    </BodyPartDef>

    <HediffGiverSetDef>
        <defName>Khajiit_HediffGiver</defName>
        <hediffGivers>
            <li Class="HediffGiver_Birthday">
                <hediff>Khajiit_Stomach</hediff>
                <countToAffect>2</countToAffect>
                <ageFractionChanceCurve>
                    <points>
                        <li>(0, 1)</li>
                    </points>
                </ageFractionChanceCurve>
            </li>
        </hediffGivers>
    </HediffGiverSetDef>

    <HediffDef>
        <defName>Khajiit_Stomach</defName>
        <label>khajiit stomach</label>
        <labelNoun>a khajiit stomach</labelNoun>
        <description>Khajiit stomach, resistant to food poisoning.</description>
        <isBad>false</isBad>
        <stages>
            <li>
                <becomeVisible>false</becomeVisible>
                <foodPoisoningChanceFactor>0.3</foodPoisoningChanceFactor>
            </li>
        </stages>
    </HediffDef>

    <!--_________tails___________-->
    <RecipeDef>
        <defName>InstallClothTail</defName>
        <label>install cloth tail</label>
        <description>Installs cloth tail.</description>
        <workerClass>Recipe_InstallArtificialBodyPart</workerClass>
        <jobString>Installing cloth tail.</jobString>
        <workAmount>1200</workAmount>
        <recipeUsers>
            <li>Theo_AlfiqRace</li>
            <li>Theo_SencheRace</li>
            <li>Theo_KhajiitRace</li>
            <li>Theo_OhmesRahtRace</li>
        </recipeUsers>
        <ingredients>
            <li>
                <filter>
                    <categories>
                        <li>Medicine</li>
                    </categories>
                </filter>
                <count>1</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>Khajiit_ClothTail</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <categories>
                <li>Medicine</li>
            </categories>
            <thingDefs>
                <li>Khajiit_ClothTail</li>
            </thingDefs>
        </fixedIngredientFilter>
        <appliedOnFixedBodyParts>
            <li>Tail</li>
        </appliedOnFixedBodyParts>
        <addsHediff>Khajiit_ClothTail</addsHediff>
    </RecipeDef>

    <HediffDef ParentName="AddedBodyPartBase">
        <defName>Khajiit_ClothTail</defName>
        <description>A belted cloth tail meant to comfort Khajiit who lost their natural ones, if only a little.</description>
        <label>cloth tail</label>
        <addedPartProps>
            <solid>true</solid>
            <partEfficiency>0.6</partEfficiency>
        </addedPartProps>
    </HediffDef>

    <thingDef ParentName="BodyPartProstheticBase">
        <defName>Khajiit_ClothTail</defName>
        <label>cloth tail</label>
        <description>Cloth tail attachable with a belt. Offers some comfort to those who lost theirs.</description>
        <techLevel>Neolithic</techLevel>
        <techHediffsTags>
            <li>Simple</li>
        </techHediffsTags>
        <tradeTags>
            <li>BasicProstheses</li>
        </tradeTags>
        <thingCategories>
            <li>BodyPartsSimple</li>
        </thingCategories>
        <graphicData>
            <texPath>Things/Item/Health/HealthItem</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <color>(155,165,148)</color>
        </graphicData>
        <statBases>
            <MarketValue>400</MarketValue>
            <Mass>.3</Mass>
            <DeteriorationRate>2</DeteriorationRate>
            <WorkToMake>2000</WorkToMake>
        </statBases>
        <costList>
            <Cloth>10</Cloth>
            <Leather_Plain>2</Leather_Plain>
        </costList>
        <recipeMaker>
            <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
            <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
            <workSkill>Crafting</workSkill>
            <effectWorking>Tailor</effectWorking>
            <researchPrerequisite MayRequireAnyOf="nunahuralshamikh.medp,joedaly.medmeds.mo">CrudeLimbs</researchPrerequisite>
            <recipeUsers>
                <li>CraftingSpot</li>
                <li>HandTailoringBench</li>
                <li MayRequire="dankpyon.medieval.overhaul">DankPyon_Workbench</li>
            </recipeUsers>
        </recipeMaker>
    </thingDef>
</Defs>