<Defs>
    <AlienRace.ThingDef_AlienRace ParentName="ESCP_BaseRace_NoCosmeticGenes" Name="Theo_BaseRace_Khajiit" Abstract="True">
        <statBases>
            <PsychicSensitivity>1.2</PsychicSensitivity>
            <SocialImpact>0.8</SocialImpact>
            <ComfyTemperatureMin>0</ComfyTemperatureMin>
            <Flammability>1.2</Flammability>
            <ComfyTemperatureMax>35</ComfyTemperatureMax>
        </statBases>
        <descriptionHyperlinks>
            <GeneDef MayRequire="Ludeon.RimWorld.Biotech">Theo_Khajiit_InheritedBonus</GeneDef>
        </descriptionHyperlinks>
        <modExtensions>
            <li Class="ESCP_RaceTools.RaceProperties">
                <heatstrokeResistant>true</heatstrokeResistant>
                <majorRacialGeneToInherit MayRequire="Ludeon.RimWorld.Biotech">Theo_Khajiit_InheritedBonus</majorRacialGeneToInherit>
            </li>
        </modExtensions>
        <race>
            <leatherDef>ESCP_LeatherKhajiit</leatherDef>
            <nameGenerator>Theo_Khajiit_NamerMale</nameGenerator>
            <nameGeneratorFemale>Theo_Khajiit_NamerFemale</nameGeneratorFemale>
            <ageGenerationCurve>
                <points>
                    <li MayRequire="Ludeon.RimWorld.Biotech">(0,0)</li>
                    <li MayRequire="Ludeon.RimWorld.Biotech">(0.001,43)</li>
                    <li MayRequire="Ludeon.RimWorld.Biotech">(8,86)</li>
                    <li MayRequire="Ludeon.RimWorld.Biotech">(12.5,118)</li>
                    <!-- Exclude 12.5-13 years to avoid spawning pawns who are very close to becoming adults -->
                    <li MayRequire="Ludeon.RimWorld.Biotech">(12.51,0)</li>
                    <li MayRequire="Ludeon.RimWorld.Biotech">(13,0)</li>
                    <li MayRequire="Ludeon.RimWorld.Biotech">(13.001,122)</li>
                    <!-- End exclude -->
                    <li MayRequire="Ludeon.RimWorld.Biotech">(13.999,130)</li>
                    <li>(14,0)</li>
                    <li MayRequire="Ludeon.RimWorld.Biotech">(14.001,130)</li>
                    <li>(16,100)</li>
                    <li>(50,100)</li>
                    <li>(60,30)</li>
                    <li>(70,18)</li>
                    <li>(80,10)</li>
                    <li>(90,3)</li>
                    <li>(100,0)</li>
                </points>
            </ageGenerationCurve>
        </race>
        <alienRace>
            <styleSettings>
                <li>
                    <key>BeardDef</key>
                    <value>
                        <hasStyle>false</hasStyle>
                    </value>
                </li>
            </styleSettings>
            <generalSettings>
                <maxDamageForSocialfight>6</maxDamageForSocialfight>
                <reproduction>
                    <hybridSpecific>
                        <li>
                            <!--final values 64, 6, 6, 12, 12-->
                            <partnerRace>Theo_KhajiitRace</partnerRace>
                            <probability>64</probability>
                            <childKindDef>Theo_KhajiitPlayerPawnKind_Tribal</childKindDef>
                        </li>
                        <li>
                            <partnerRace>Theo_KhajiitRace</partnerRace>
                            <probability>18</probability>
                            <childKindDef>Theo_OhmesPlayerPawnKind_Tribal</childKindDef>
                        </li>
                        <li>
                            <partnerRace>Theo_KhajiitRace</partnerRace>
                            <probability>18</probability>
                            <childKindDef>Theo_OhmesRahtPlayerPawnKind_Tribal</childKindDef>
                        </li>
                        <!--<li>
							<partnerRace>Theo_KhajiitRace</partnerRace>
                        	<probability>12</probability>
                        	<childKindDef>Theo_AlfiqPlayerPawnKind_Tribal</childKindDef>
                    </li>
                    <li>
							<partnerRace>Theo_KhajiitRace</partnerRace>
                        	<probability>12</probability>
                        	<childKindDef>Theo_Senche-RahtPlayerPawnKind_Tribal</childKindDef>
                    </li>-->
                        <li>
                            <!--final values 64, 6, 6, 12, 12-->
                            <partnerRace>Theo_OhmesRace</partnerRace>
                            <probability>64</probability>
                            <childKindDef>Theo_KhajiitPlayerPawnKind_Tribal</childKindDef>
                        </li>
                        <li>
                            <partnerRace>Theo_OhmesRace</partnerRace>
                            <probability>18</probability>
                            <childKindDef>Theo_OhmesPlayerPawnKind_Tribal</childKindDef>
                        </li>
                        <li>
                            <partnerRace>Theo_OhmesRace</partnerRace>
                            <probability>18</probability>
                            <childKindDef>Theo_OhmesRahtPlayerPawnKind_Tribal</childKindDef>
                        </li>
                        <!--<li>
							<partnerRace>Theo_OhmesRace</partnerRace>
                        	<probability>12</probability>
                        	<childKindDef>Theo_AlfiqPlayerPawnKind_Tribal</childKindDef>
                    </li>
                    <li>
							<partnerRace>Theo_OhmesRace</partnerRace>
                        	<probability>12</probability>
                        	<childKindDef>Theo_Senche-RahtPlayerPawnKind_Tribal</childKindDef>
                    </li>-->
                        <li>
                            <!--final values 64, 6, 6, 12, 12-->
                            <partnerRace>Theo_OhmesRahtRace</partnerRace>
                            <probability>64</probability>
                            <childKindDef>Theo_KhajiitPlayerPawnKind_Tribal</childKindDef>
                        </li>
                        <li>
                            <partnerRace>Theo_OhmesRahtRace</partnerRace>
                            <probability>18</probability>
                            <childKindDef>Theo_OhmesPlayerPawnKind_Tribal</childKindDef>
                        </li>
                        <li>
                            <partnerRace>Theo_OhmesRahtRace</partnerRace>
                            <probability>18</probability>
                            <childKindDef>Theo_OhmesRahtPlayerPawnKind_Tribal</childKindDef>
                        </li>
                        <!--<li>
							<partnerRace>Theo_OhmesRahtRace</partnerRace>
                        	<probability>12</probability>
                        	<childKindDef>Theo_AlfiqPlayerPawnKind_Tribal</childKindDef>
                    </li>
                    <li>
							<partnerRace>Theo_OhmesRahtRace</partnerRace>
                        	<probability>12</probability>
                        	<childKindDef>Theo_Senche-RahtPlayerPawnKind_Tribal</childKindDef>
                    </li>-->
                    </hybridSpecific>
                </reproduction>
                <raceGenes MayRequire="ludeon.rimworld.biotech">
                    <li MayRequire="sirmashedpotato.morrowrim.moonsugarandskooma">
                        AddictionResistant_MorrowRim_MoonSugar</li>
                    <!--<li>AddictionResistant_MorrowRim_Skooma</li>-->
                </raceGenes>
                <allowHumanBios>false</allowHumanBios>
                <humanRecipeImport>true</humanRecipeImport>
                <immuneToAge>false</immuneToAge>
                <alienPartGenerator>
                    <headTypes Inherit="False">
                        <li>Male_AverageNormal</li>
                        <li>Female_AverageNormal</li>
                    </headTypes>
                    <bodyTypes Inherit="False">
                        <li>Thin</li>
                    </bodyTypes>
                </alienPartGenerator>
                <newbornBackstoryFilter>
                    <li>
                        <categories>
                            <li>ESCP_GenericBiotechBackstory_Newborn</li>
                        </categories>
                        <commonality>1</commonality>
                    </li>
                </newbornBackstoryFilter>
                <childBackstoryFilter>
                    <li>
                        <categories>
                            <li>ESCP_GenericBiotechBackstory_Child</li>
                        </categories>
                        <commonality>1</commonality>
                    </li>
                </childBackstoryFilter>
                <adultBackstoryFilter>
                    <li>
                        <categories>
                            <li>ESCP_GenericBiotechBackstory_Adult</li>
                        </categories>
                        <commonality>1</commonality>
                    </li>
                </adultBackstoryFilter>
                <adultVatBackstoryFilter>
                    <li>
                        <categories>
                            <li>ESCP_GenericBiotechBackstory_VatGrown</li>
                        </categories>
                        <commonality>1</commonality>
                    </li>
                </adultVatBackstoryFilter>
            </generalSettings>
            <raceRestriction>
                <blackGeneList>
                    <li MayRequire="Ludeon.RimWorld.Biotech">Theo_Khajiit_InheritedBonus</li>
                </blackGeneList>
            </raceRestriction>
        </alienRace>

    </AlienRace.ThingDef_AlienRace>

    <AlienRace.ThingDef_AlienRace ParentName ="Theo_BaseRace_Khajiit" Name="Theo_Khajiit_StandardForm" Abstract="True">
        <race>
            <body>Theo_BaseBody</body>
        </race>
        <alienRace>
            <graphicPaths>
                <head>Things/Pawn/Humanlike/Theo_Khajiit/Heads/Base/</head>
                <body>Things/Pawn/Humanlike/Theo_Khajiit/Bodies/Base/</body>
            </graphicPaths>
            <generalSettings>
                <alienPartGenerator>
                    <headTypes>
                        <li>Male_AverageNormal</li>
