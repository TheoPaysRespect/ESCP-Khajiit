                            <inFrontOfBody>false</inFrontOfBody>
                            <drawnDesiccated>false</drawnDesiccated>
                            <scaleWithPawnDrawsize>true</scaleWithPawnDrawsize>
                            <offsets>
                                <!--test-->
                                <north>
                                    <offset>(-0.0286,0.0571)</offset>
                                </north>
                                <east>
                                    <offset>(0.0143,-0.1429)</offset>
                                </east>
                            </offsets>
                        </li>
                    </bodyAddons>
                </alienPartGenerator>
            </generalSettings>
        </alienRace>
    </AlienRace.ThingDef_AlienRace>

    <AlienRace.ThingDef_AlienRace ParentName="Theo_BaseRace_Khajiit" Name="Theo_Khajiit_Ohmes" Abstract="True">
        <statBases>
            <MarketValue>1900</MarketValue>
            <MoveSpeed>1</MoveSpeed>
            <MeleeDodgeChance>1.1</MeleeDodgeChance>
            <PawnTrapSpringChance>0.8</PawnTrapSpringChance>
        </statBases>
        <race>
            <baseBodySize>0.8</baseBodySize>
            <baseHealthScale>1</baseHealthScale>
        </race>
        <alienRace>
            <graphicPaths Inherit="false">
                <skinShader>Cutout</skinShader>
            </graphicPaths>
            <generalSettings>
                <maxDamageForSocialfight>6</maxDamageForSocialfight>
                <alienPartGenerator>
                    <headTypes>
                        <li>ESCP_HeadMer_Female_Average_Normal</li>
                        <li>ESCP_HeadMer_Female_Average_Pointy</li>
                        <li>ESCP_HeadMer_Female_Average_Wide</li>
                        <!--<li>ESCP_HeadMer_Female_Narrow_Normal</li>
                        <li>ESCP_HeadMer_Female_Narrow_Pointy</li>
                        <li>ESCP_HeadMer_Female_Narrow_Wide</li>-->
                        <li>ESCP_HeadMer_Male_Average_Normal</li>
                        <li>ESCP_HeadMer_Male_Average_Pointy</li>
                        <li>ESCP_HeadMer_Male_Average_Wide</li>
                        <!--<li>ESCP_HeadMer_Male_Narrow_Normal</li>
                        <li>ESCP_HeadMer_Male_Narrow_Pointy</li>
                        <li>ESCP_HeadMer_Male_Narrow_Wide</li>-->
                    </headTypes>
                </alienPartGenerator>
            </generalSettings>
            <thoughtSettings>
                <cannotReceiveThoughts>
                    <li>SleptInHeat</li>
                    <li>EnvironmentHot</li>
                </cannotReceiveThoughts>
                <replacerList>
                    <li>
                        <original>AteKibble</original>
                        <replacer>Theo_Khajiit_AteKibble</replacer>
                    </li>
                </replacerList>
            </thoughtSettings>
        </alienRace>
    </AlienRace.ThingDef_AlienRace>
