                                <south>
                                    <offset>(-0.055,0.15)</offset>
                                </south>
                                <north>
                                    <offset>(0.045,0.155)</offset>
                                    <!--test these-->
                                </north>
                                <east>
                                    <offset>(0.08,0.25)</offset>
                                    <!--test these-->
                                </east>
                            </offsets>
                        </li>
                        <li>
                            <path>Things/Pawn/Humanlike/Theo_Khajiit/Tails/Tail</path>
