<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ScenarioDef>
		<defName>ESCP_BandaariScenario</defName>
		<label>Bandaari Pedlars</label>
		<description>Nirni's bounty is vast, and so are your people's pockets. You travel around the world, selling what you reap from whoever you come across.\n\nThis scenario is intended for a nomadic playthough.</description>
		<scenario>
			<summary>4 Khajiit travel around the globe.</summary>
			<!--description-->
			<playerFaction>
				<def>PlayerFaction</def>
				<factionDef>ESCP_KhajiitPlayerFaction_Bandaari</factionDef>
			</playerFaction>
			<parts>
				<li Class="ScenPart_ConfigPage_ConfigureStartingPawns">
					<def>ConfigPage_ConfigureStartingPawns</def>
					<pawnCount>4</pawnCount>
					<pawnChoiceCount>8</pawnChoiceCount>
				</li>
				<li Class="ScenPart_PlayerPawnsArriveMethod">
					<def>PlayerPawnsArriveMethod</def>
					<method>Standing</method>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Pemmican</thingDef>
					<count>800</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>MedicineHerbal</thingDef>
					<count>30</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>MeleeWeapon_Ikwa</thingDef>
					<stuff>Steel</stuff>
					<count>2</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>MeleeWeapon_Knife</thingDef>
					<stuff>Jade</stuff>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Bow_Short</thingDef>
				</li>
				<li MayRequire="sirmashedpotato.morrowrim.moonsugarandskooma"
					Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>MorrowRim_Skooma</thingDef>
					<count>5</count>
				</li>
				<li MayRequire="sirmashedpotato.morrowrim.moonsugarandskooma"
					Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>MorrowRim_MoonSugar</thingDef>
					<count>10</count>
				</li>
				<li Class="ScenPart_StartingAnimal">
					<def>StartingAnimal</def>
					<animalKind>Cat</animalKind>
					<count>1</count>
					<bondToRandomPlayerPawnChance>1.0</bondToRandomPlayerPawnChance>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Cloth</thingDef>
					<count>52</count>
				</li>
				<li MayRequire="oskarpotocki.vfe.vikings"
					Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>VFEV_Sweetroll</thingDef>
					<count>5</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Gold</thingDef>
					<count>15</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Jade</thingDef>
					<count>10</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>PsychiteTea</thingDef>
					<count>4</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>WoolSheep</thingDef>
					<count>36</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Leather_Bird</thingDef>
					<count>43</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Apparel_TribalA</thingDef>
					<stuff>Cloth</stuff>
					<count>4</count>
					<quality>Poor</quality>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Pila</thingDef>
				</li>
				<li MayRequire="vanillaexpanded.vanillatraitsexpanded" Class="ScenPart_ForcedTrait">
					<def>ForcedTrait</def>
					<chance>1</chance>
					<context>PlayerStarter</context>
					<trait>VTE_Wanderlust</trait>
				</li>
				<li Class="ScenPart_GameStartDialog">
					<def>GameStartDialog</def>
					<text>You awaken and look around at the unfamiliar landscape. This day can be another in your journey, or a chance to settle down and try something new. \n\nYou have enough trade goods for a modest income next trade, and food to last you around 6 days.</text>
					<!--description-->
					<closeSound>GameStartSting</closeSound>
				</li>
			</parts>
		</scenario>
	</ScenarioDef>
</Defs>