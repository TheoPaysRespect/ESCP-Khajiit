    <ThingDef Name="Khajiit_LeatherBase" ParentName="ApparelMakeableBase" Abstract="true">
        <techLevel>Neolithic</techLevel>
        <stuffCategories>
            <li>Leathery</li>
        </stuffCategories>
        <tradeability>Sellable</tradeability>
        <possessionCount>1</possessionCount>
        <thingCategories>
            <li>Apparel</li>
        </thingCategories>
        <apparel>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Legs</li>
            </bodyPartGroups>
            <layers>
                <li>OnSkin</li>
            </layers>
            <tags>
                <li>Neolithic</li>
            </tags>
            <canBeDesiredForIdeo>false</canBeDesiredForIdeo>
            <defaultOutfitTags>
                <li>Worker</li>
                <li>Soldier</li>
            </defaultOutfitTags>
        </apparel>
        <recipeMaker>
            <skillRequirements>
                <Crafting>3</Crafting>
            </skillRequirements>
            <researchPrerequisite MayRequire="dankpyon.medieval.overhaul">DankPyon_Tailoring</researchPrerequisite>
            <recipeUsers>
                <li>ElectricTailoringBench</li>
                <li>HandTailoringBench</li>
                <li>CraftingSpot</li>
                <li MayRequire="dankpyon.medieval.overhaul">DankPyon_TailorsBench</li>
            </recipeUsers>
        </recipeMaker>
        <tradeTags>
            <li>BasicClothing</li>
        </tradeTags>
        <colorGenerator Class="ColorGenerator_StandardApparel" />
    </ThingDef>

    <ThingDef Name="Khajiit_MetalBase" ParentName="ArmorSmithableBase" Abstract="true">
